{
  "compilerOptions": {
    "target": "ES2020", 
    "module": "CommonJS",             
    "moduleResolution": "node",       
    "esModuleInterop": true,          
    "resolveJsonModule": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true
  },
  "ts-node": {
    "esm": false,
    "experimentalSpecifierResolution": "node"
  },
  "include": ["src/**/*"]
}